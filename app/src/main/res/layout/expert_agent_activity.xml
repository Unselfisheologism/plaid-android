tho<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Expert Agent Interface"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="24dp" />

    <!-- Circular icon with stickman figure -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginBottom="24dp">

        <FrameLayout
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center">

            <!-- Circular background -->
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/circle_shape"
                android:backgroundTint="#2196F3" />

            <!-- Stickman figure -->
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:src="@android:drawable/ic_menu_my_calendar"
                android:contentDescription="Expert Agent" />

        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Expert Agent"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginTop="8dp" />

    </LinearLayout>

    <!-- Three rectangular content areas stacked vertically (user's command) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginBottom="24dp">

        <!-- User Command 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/node_background"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="User Command 1:"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Please analyze the sales data and create a report with recommendations."
                android:padding="12dp"
                android:background="@drawable/user_message_background"
                android:minHeight="60dp" />

        </LinearLayout>

        <!-- User Command 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/node_background"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="User Command 2:"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Include charts and export to PDF."
                android:padding="12dp"
                android:background="@drawable/user_message_background"
                android:minHeight="60dp" />

        </LinearLayout>

        <!-- User Command 3 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/node_background"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="User Command 3:"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Complete within 2 hours."
                android:padding="12dp"
                android:background="@drawable/user_message_background"
                android:minHeight="60dp" />

        </LinearLayout>

    </LinearLayout>

    <!-- Vertical line with dots as checkpoints -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Task Progress:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginEnd="16dp" />

        <!-- Vertical line with checkpoints -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- Checkpoint 1 -->
            <View
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:background="@drawable/circle_shape"
                android:backgroundTint="#4CAF50"
                android:layout_marginBottom="8dp" />

            <View
                android:layout_width="2dp"
                android:layout_height="24dp"
                android:background="#2196F3"
                android:layout_marginBottom="8dp" />

            <!-- Checkpoint 2 -->
            <View
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:background="@drawable/circle_shape"
                android:backgroundTint="#FF9800"
                android:layout_marginBottom="8dp" />

            <View
                android:layout_width="2dp"
                android:layout_height="24dp"
                android:background="#2196F3"
                android:layout_marginBottom="8dp" />

            <!-- Checkpoint 3 -->
            <View
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:background="@drawable/circle_shape"
                android:backgroundTint="#9E9E9E"
                android:layout_marginBottom="8dp" />

            <View
                android:layout_width="2dp"
                android:layout_height="24dp"
                android:background="#2196F3"
                android:layout_marginBottom="8dp" />

            <!-- Checkpoint 4 -->
            <View
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:background="@drawable/circle_shape"
                android:backgroundTint="#9E9E9E" />

        </LinearLayout>

        <!-- Checkpoint descriptions -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Data Collection - Completed"
                android:textSize="14sp"
                android:layout_marginBottom="20dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Data Analysis - In Progress"
                android:textSize="14sp"
                android:layout_marginBottom="20dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Report Generation - Pending"
                android:textSize="14sp"
                android:layout_marginBottom="20dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Export to PDF - Pending"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>