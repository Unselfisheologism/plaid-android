<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/agent_tab_indicator"
    android:padding="8dp">

    <!-- Top indicators -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Agent indicator (left) -->
        <ImageView
            android:id="@+id/agentIndicator"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="4dp"
            android:src="@android:drawable/ic_menu_my_calendar"
            android:contentDescription="Agent indicator" />

        <!-- Status indicator (right) -->
        <ImageView
            android:id="@+id/statusIndicator"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="4dp"
            android:layout_gravity="end"
            android:src="@android:drawable/presence_online"
            android:contentDescription="Status indicator" />

    </LinearLayout>

    <!-- Tab preview image -->
    <ImageView
        android:id="@+id/tabPreview"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="4dp"
        android:scaleType="centerCrop"
        android:background="#f0f0f0"
        android:contentDescription="Tab preview" />

    <!-- Tab title -->
    <TextView
        android:id="@+id/tabTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="12sp"
        android:textColor="@android:color/black"
        android:maxLines="2"
        android:ellipsize="end"
        android:gravity="center"
        android:text="Tab Title" />

</LinearLayout>