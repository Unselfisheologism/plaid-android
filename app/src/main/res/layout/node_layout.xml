<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/node_background"
    android:padding="16dp"
    android:layout_marginBottom="16dp">

    <!-- Node header with title and remove button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="12dp">

        <TextView
            android:id="@+id/nodeTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Node Title"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/black" />

        <Button
            android:id="@+id/removeNodeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remove"
            android:backgroundTint="#F44336"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:padding="8dp" />

    </LinearLayout>

    <!-- Node description -->
    <TextView
        android:id="@+id/nodeDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Node description"
        android:textSize="14sp"
        android:textColor="@android:color/darker_gray"
        android:layout_marginBottom="12dp" />

    <!-- Action selection -->
    <Spinner
        android:id="@+id/nodeActionSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown" />

    <!-- Parameter container -->
    <LinearLayout
        android:id="@+id/nodeParamContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" />

</LinearLayout>