<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white">

    <!-- Workflow name and description inputs -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="16dp">

        <EditText
            android:id="@+id/workflowName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Workflow Name"
            android:textSize="18sp"
            android:textStyle="bold"
            android:padding="12dp"
            android:background="@drawable/node_background"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/workflowDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Workflow Description"
            android:textSize="14sp"
            android:padding="12dp"
            android:background="@drawable/node_background"
            android:minLines="2" />

    </LinearLayout>

    <!-- Add node buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <Button
            android:id="@+id/addNotionNodeButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Add Notion Node"
            android:layout_marginEnd="4dp" />

        <Button
            android:id="@+id/addGmailNodeButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Add Gmail Node"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp" />

        <Button
            android:id="@+id/addWebAutomationNodeButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Add Web Node"
            android:layout_marginStart="4dp" />

    </LinearLayout>

    <!-- Vertical workflow nodes container -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/workflowNodesContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Nodes will be populated programmatically -->

        </LinearLayout>

    </ScrollView>

    <!-- Action buttons at the bottom -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/saveWorkflowButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Save Workflow"
            android:layout_marginEnd="8dp"
            android:backgroundTint="#4CAF50" />

        <Button
            android:id="@+id/runWorkflowButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Run Workflow"
            android:layout_marginStart="8dp"
            android:backgroundTint="#2196F3" />

    </LinearLayout>

</LinearLayout>